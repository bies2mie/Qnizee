<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".OrderDetails">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:background="@drawable/redgrad"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Order Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buyer Name"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/buyerNametxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="buyerName" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Phone Number"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phoneNumtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Purchase Date and Time"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/purchasedateNtime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Order Status"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orderStat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Order User Type"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orderUserTypetxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tiada" />

                        <TextView
                            android:id="@+id/cancelTxtUp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sebab Batal"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/cancelTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="info----"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buyer Email"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/buyerEmailtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Order ID"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/orderIDtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Complete Date and Time"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completedatentime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Matric / Staff ID"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/matrixIDtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tiada" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxcornergrey"
                    android:layout_marginTop="40dp"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="Purchase Item"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/orderDayTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Monday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <TextView

                                android:id="@+id/orderTypetxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lunch"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/orderqtt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="x2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/puLoctxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Hotel EDC"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <TextView

                                android:id="@+id/puTimetxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10 AM"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"

                                    android:text="Total Price:"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textColor="@color/colorBackButton"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/totalPricetxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="RM 33.00"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textColor="@color/colorBackButton"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView

                    android:id="@+id/showqrtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Please show the QR to Deliverer"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageViewQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars[1]" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>